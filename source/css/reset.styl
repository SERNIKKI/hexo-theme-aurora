*
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  color: #555;

::selection
  color: #fff;
  background: #b28fce;
h2,
h3,
h4
  color: #666;
img
  display: block;
a
  color: inherit;
  text-decoration: none;

a,
button,
span[class*='img-box'],
.cursor
  cursor: url('../images/cursor_link.png'), auto;

ul, li
  list-style: none;

@font-face
  font-family: GuDianMingChaoTi;
  font-weight: bold;
  src: url('../fonts/HanYiXueFengTiFan.ttf');