#header
  .inner
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    margin: 0 auto
    padding: 0.5rem 0
    overflow: hidden
    .title,
    .subtitle
      font-family: GuDianMingChaoTi
      animation-name: fadeInDown
      animation-duration: 0.6s
      transform-origin: top center
    .title
      font-size: 0.52rem
      line-height: 0.6rem
      letter-spacing: 2px
      transition: color 0.25s ease-in-out
      &:hover
        color: #b854d4
    .subtitle
      font-size: 0.22rem
      line-height: 0.32rem
      letter-spacing: 4px
    ul
      display: flex
      justify-content: center
      align-items: center
      margin-top: 0.16rem
      padding: 0 0.32rem
      height: 0.6rem
      background: rgba(0, 0, 0, 0.1)
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2) inset
      transition: all 0.6s ease-out
      animation-name: fadeIn
      animation-duration: 0.8s
      li
        width: 0.6rem
        font-size: 0.16rem
        list-style: none
        height: 86%
        transition: color 0.25s ease-in-out
        a
          display: flex
          flex-direction: column
          justify-content: space-around
          align-items: center
          height: 100%
          transition: color 0.25s ease-in-out
          & > span
            transition: color 0.25s ease-in-out
        &:hover
          color: #b854d4
          & > a > span
            color: #b854d4
    @media (max-width: 900px)
      ul
        height: 0.65rem
        li
          width: 0.8rem
    @media (max-width: 375px)
      ul
        height: 0.8rem
    
    
  

        
      
    
  

