.books
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  .content
    flex: 1;
    .book-list
      display: flex;
      flex-wrap: wrap;
      padding: 0 .12rem;
      li
        width: 49%;
        display: flex;
        flex-direction: column;
        align-content: center;
        padding: 0.12rem;
        margin: 0.12rem .5%;
        transition: all 0.25s ease 0s, transform 0.6s cubic-bezier(0.6, 0.2, 0.1, 1) 0s;
        &:hover
          transform: translateY(-6px);
          box-shadow: 0 10px 20px rgba(0,0,0,0.2), 0 6px 6px rgba(0,0,0,0.24);
        @media (max-width: 800px)
          &
            width: 99%;
        .info
          display: flex;
          .img-wrapper
            width: 1.2rem;
            height: 1.6rem;
            position: relative;
            img
              position absolute;
              left: 0;
              top: 0;
              width: 100%;
              height: 100%;
              object-fit: cover;
          .meta
            margin-left: .12rem;
            line-height: 1.7;
            .notes
              &:hover
                color: #b854d4;
                transition: color 0.3s ease-out;
            .rec-idx
              .icon
                color: #b854d4;
        .book-desc
          margin-top: .12rem;
