@font-face {
  font-family: GuDianMingChaoTi;
  font-weight: bold;
  src: url('../font/GuDianMingChaoTi.ttf');
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

::selection {
  background: $selection-bg;
  color: $selection-color;
}

body
  font-family: $font-family-base;
  font-size: $font-size-base;
  font-weight: $font-weight-normal;
  color: $text-color;
  line-height: $line-height-base;
  user-select: none;
  scroll-behavior: smooth;
  text-shadow: 0 0 1px $bg-dark-dim;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  -webkit-text-size-adjust: 100%;
  -ms-text-size-adjust: 100%;

ul, ol, li
  list-style-type: none;

h1, h2, h3, h4, h5, h6
  margin: 0;
  padding: 0;

img {
  display: block;
  margin: auto;
  max-width: 100%;
  height: auto;
  object-fit: cover;
}

a
button
  cursor($cursor-link-img);

a {
  color: inherit;
  text-decoration: none;
  outline: none;
  word-wrap: break-word;
}

button
  border: none;
  outline: none;

input,
textarea,
button
  appearance: none;
  -webkit-appearance: none;
  border: none;
  border-radius: 0;

html, body, .layout
  height: 100%;
  min-height: 100%;
  scrollBar();

.layout
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  cursor($cursor-img);
  & > *
    flex-shrink: 0;
  header
    min-height: 200px;
  main
    flex: 1;
    margin: 0 auto;
    max-width: 876px;
  footer
    min-height: 54px;