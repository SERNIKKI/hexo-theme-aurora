.index
  width: 100%;
  .posts
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  article
    display: flex;
    flex-direction: column;
    margin-bottom: 0.16rem;
    width: 49.2%;
    text-align: left;
    transition: all 0.25s ease 0s, transform 0.6s cubic-bezier(0.6, 0.2, 0.1, 1) 0s;
    position: relative;
    overflow: hidden;
    .post-url
      positionCoverFather(1)
    &:hover
      transform: translateY(-6px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2), 0 6px 6px rgba(0, 0, 0, 0.24);
      .img-wrapper, img
        transform: scale(1.06);
      .title
        color: #b854d4;
    .post-image
      width: 100%;
      padding-top: 56%;
      position: relative;
      overflow: hidden;
      .img-wrapper
        positionCoverFather()
        background-color: rgba(233, 224, 207, 0.66);
        background-size: cover;
        background-repeat: no-repeat;
        transition: transform 0.6s ease-out;
        overflow: hidden;
        img
          positionCoverFather()
          transition: transform 0.6s ease-out;
    .post-title
      padding: 0.12rem 0.14rem;
      .title
        font-weight: normal;
        transition: color 0.25s ease-in-out;
        ellipsis()
    .post-meta
      display: flex;
      padding: 0.12rem 0.1rem;
      font-size: 0.16rem;
      border-top: 1px solid rgba(0, 0, 0, 0.08);
      & > span
        flex: 1;
        display: flex;
        margin-right: 0.06rem;
        align-items: center;
        ellipsis()
        .icon
            margin-right: 4px;
        &.meta-calendar
          min-width: 30%;
          flex-shrink: 0;
  @media (max-width: 900px)
    .posts
      justify-content: space-around;
      article
        margin-bottom: 0.32rem;
        width: 98%;


      
      
