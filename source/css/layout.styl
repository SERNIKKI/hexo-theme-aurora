#app
  position: relative
  padding-bottom: 1rem
  text-align: center
  .back-to-top
    position: fixed
    right: 0.25rem
    width: 70px
    height: 900px
    z-index: 99
    opacity: 1
    transition: all 0.6s ease-out
    background: url(https://i.loli.net/2019/01/24/5c496f5c617f6.png) no-repeat center
    background-size: contain
    &.visible
      animation: float 3s linear infinite
  .page
    margin: 0 auto
    padding: 0 0.12rem
    max-width: 900px
    user-select: text