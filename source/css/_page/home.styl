// 为了防止 index 冲突将首页 命名为 home

.index
  .content
    display: flex;
    flex-wrap: wrap;
    +pc-layout()
      justify-content: space-between;
    +sp-layout()
      justify-content: space-around;
    article
      card-lignt()
      overflow:hidden;
      +pc-layout()
        margin-bottom: 15px;
        width: 49.2%;
      +sp-layout()
        width: 94%;
        margin: 0 3% 4%;
      .post-header
        position: relative;
        overflow: hidden;
        .post-image
          position: absolute;
          left: 0;
          top: 0;
        .post-head
          display: flex;
          justify-content: space-between;
          align-items: center;
          position: absolute;
          left: 0;
          bottom: 0;
          padding: 0 12px;
          width: 100%;
          height: 50px;
          background-color: $bg-white-dim;
          box-shadow: 0 -1px 2px $bg-dark;
          .post-title,
          .post-image-source
            clip()
          .post-title
            font-size: $font-size-larger;
            font-weight: $font-weight-normal;
          .post-image-source
            font-size: $font-size-small;
            text-transform: capitalize;
            +sp-layout()
              transform: translateY(2px);
          
      .post-body
        padding: $card-padding;
        text-align: justify;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        margin: 0;
        font-size: $font-size-base;
        text-overflow: ellipsis;
        overflow: hidden;
        +pc-layout()
          -webkit-line-clamp: 3;
        +sp-layout()
          -webkit-line-clamp: 4;
      .post-meta
        display: flex;
        padding: $card-padding;
        height: 50px;
        border-top: 1px solid $bg-dark-line;
        word-break: keep-all;
        & > span
          display: flex;
          align-items: center;
          margin-right: 12px;
          &: last-child
            margin-right: 0;
          span
            padding-right: 6px;
            &:last-child
              padding-right: 0px;
          .icon-calendar, 
          .icon-fire, 
          .icon-tag,
          .icon-bookmark-empty
            margin-right: 4px;
          .icon-calendar
          .icon-fire
            margin-top: -2px;


        
 
