#post
  width: 100%
  article
    background-color: rgba(255, 255, 255, 0.66)
    .post-header
      position: relative
      font-size: 0.15rem
      overflow: hidden
      margin-bottom: .16rem
      .img-wrapper
        width: 100%
        padding-top: 56%
        background-color: rgba(233, 224, 207,0.66)
        background-size: cover
        background-repeat: no-repeat
        transition: transform 0.6s ease-out
        position relative
        img
          position absolute
          top: 0
          left 0
          width: 100%
          height: 100%
          transition: transform 0.6s ease-out
      &:hover
        .img-wrapper, img
          transform: scale(1.06)
      & > div
        position: absolute
        bottom: 0
        padding: 0.12rem 0.14rem
        width: 100%
        background: rgba(0, 0, 0, 0.4)
        .title
          font-weight: 400
          color: #eee
          text-transform: capitalize
        .meta
          display: flex
          margin-top: 0.08rem
          & > span
            display: flex
            align-items: center
            margin-right: 0.12rem
            &,
            span,
            .icon
              font-weight: 400
              color: #eee
            .icon
              margin-right: 8px
    .post-body
      @import 'markdown'
