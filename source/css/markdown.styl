  & 
    padding-bottom: 0.16rem
    line-height: 1.6
    font-size: 0.16rem
    text-align: justify
    p
      margin: 0 0.1rem 0.1rem
    h1,
    h2,
    h3,
    h4,
    h5,
    h6
      margin: 0.24rem 0.16rem 0.16rem
      transition: all 0.25s ease
      display: flex

      span
        padding-right: 0.06rem
        transition: all 0.25s ease
      &:hover
        &,
        span
          color: #b854d4
    h2
      padding-bottom: 0.08rem
      font-size: 0.24rem
      border-bottom: 1px dashed rgba(0, 0, 0, 0.2)
    h3
      font-size: 0.2rem
      i
        font-size: 0.18rem
    h2 + h3,
    h3 + h4
      margin-top: 0
    ol,
    ul
      margin: 0 0.16rem 0.16rem 0.52rem
      li
        margin: 0.02rem 0
      li ul,
      li ol
        margin-left: 0.2rem !important
    ul li
      list-style-type: disc !important
    ol li
      list-style-type: decimal !important
    a
      position: relative
      color: #b854d4
      i
        color: #b854d4
      &::after
        content: ''
        position: absolute
        bottom: 0
        left: 0
        width: 100%
        height: 1.5px
        background-color: #b854d4
        transform: scaleX(0)
        transform-origin: bottom right
        transition: transform 0.25s ease-out
      &:hover
        &::after
          transform-origin: bottom left
          transform: scaleX(1)
    strong
      text-shadow: 0 0 1px rgba(0, 0, 0, 0.4)
    p,
    ol,
    ul
      code
        padding: 2px 5px
        color: #b854d4
        font-weight: bold
        border-radius: 3px
        background-color: rgba(0, 0, 0, 0.1)
    a[class*='img-box'],span[class*='img-box']
      img
        margin: 0.08rem auto;
        max-width: 100%
        border-radius: 3px
        border: 6px solid transparent
        box-shadow: 0 0 10px #999
        transition: all 0.25s ease-out
      img[src*='full']
        margin-left: -0.16rem
        max-width: calc(~'100% + .32rem')
        border: none
      span
        display: block
        padding-top: 4px
        font-style: italic
        text-align: center
      &:hover
        img
          border-color: #b28fce
      &::after
        content: none;
    pre,
    blockquote
      margin-bottom: 0.16rem
    pre
      max-height: 6rem
      line-height: 1.5
      background: rgba(0, 0, 0, 0.08)
      box-shadow: #999 0px 10px 8px -10px inset, #999 0px -10px 8px -10px inset
      overflow: auto
      .hljs
        padding: 0.12rem 0.16rem 0.12rem 0.28rem
        background: transparent
        font-weight: 600
    blockquote
      position: relative
      padding: 0.36rem 0
      font-style: italic
      background: rgba(0, 0, 0, 0.08)
      box-shadow: #999 0px 10px 8px -10px inset, #999 0px -10px 8px -10px inset
      & > p
        margin: .1rem .46rem
      &::before,
      &::after
        position: absolute
        font-family: Fontello
        font-style: normal
        font-weight: normal
        text-decoration: inherit
        /*--adjust as necessary--*/
        color: #666
        font-size: 0.24rem
      &::before
        content: '\f10d'
        top: 0.06rem
        left: 0.16rem
      &::after
        content: '\f10e'
        bottom: 0.06rem
        right: 0.16rem